/home/fedeizzo/.nix-profile/bin/trayer \
    --monitor "primary" \
    --edge "top" \
    --align "right" \
    --widthtype "request" \
    --transparent true \
    --alpha 255 \
    --height 14 \
    --distance 2 \
    --distancefrom "top" &
